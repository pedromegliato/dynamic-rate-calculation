ENVIRONMENT=development
DEBUG=True

HOST=0.0.0.0
PORT=8000


DB_HOST=localhost # Para dev local fora do Docker; 'db' dentro do Docker Compose
DB_PORT=3306
DB_USER=root
DB_PASSWORD=secret
DB_NAME=insurance


REDIS_HOST=localhost 
REDIS_PORT=6379
REDIS_PASSWORD=secret


# Configurações de Logging
LOG_LEVEL=INFO # Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL

CONFIG_PATH=config/insurance-config.json
REPOSITORY_TYPE=mysql

# para variaveis d ambiente de calculo olhe a pasta  /api/config

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_PREFIX=/api/v1
API_CORS_ORIGINS=["http://localhost:3000"]
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_MINUTES=1
API_COMPRESSION_MIN_SIZE=1024

# Banco de dados
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=root
DATABASE_NAME=insurance
DATABASE_POOL_SIZE=5
DATABASE_MAX_RETRIES=3
DATABASE_RETRY_DELAY=1

# Redis
REDIS_URL=redis://:secret@localhost:6379/0
CACHE_TTL=3600
CACHE_ENABLED=True
REDIS_SOCKET_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=True

# Segurança
SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Seguro
INSURANCE_BASE_RATE=0.05
INSURANCE_MIN_CAR_YEAR=1900
INSURANCE_MAX_CAR_VALUE=1000000
INSURANCE_MIN_DEDUCTIBLE=0.01
INSURANCE_MAX_DEDUCTIBLE=0.20
INSURANCE_MIN_BROKER_FEE=0
INSURANCE_MAX_BROKER_FEE=10000
INSURANCE_AGE_ADJUSTMENT_RATE=0.005
INSURANCE_VALUE_ADJUSTMENT_RATE=0.005
INSURANCE_GIS_ADJUSTMENT_RATE=0.02

# Retry
RETRY_DELAY=1

# Circuit Breaker
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=["Exception"]

# Logging
LOGGING_LEVEL=INFO
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING_FILE=app.log
LOGGING_MAX_BYTES=10485760
LOGGING_BACKUP_COUNT=5

# Configurações do Cache
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_DB=0

# Configurações de Log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S 